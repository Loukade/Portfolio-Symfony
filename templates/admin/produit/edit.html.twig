{% extends 'base.html.twig.' %}

{% block body %}
    <div class="block">
        <fieldset>
            <h1 class="black">Editer Le Produit</h1>

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">{{ form_row(form.nom) }}</div>
                <div class="col-md-4">{{ form_row(form.description) }}</div>
            </div>
            <div class="row">
                <div class="col-md-2">{{ form_row(form.prix) }}</div>
                <div class="col-md-2">{{ form_row(form.imagefile) }}</div>
            </div>

            <button class="button button-primary">Editer</button>
            {{ form_end(form) }}
    </div>
    </fieldset>
    <br><br><br><br><br><br>
    {% include ("pages/includes/footer.html.twig") %}
{% endblock %}